{
  "name": "bankify",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "predev": "prisma generate",
    "dev": "vite dev",
    "prebuild": "rm -rf ./build && prisma generate && cp ./node_modules/.prisma/client/*.js ./node_modules/@prisma/client",
    "build": "vite build",
    "dist": "rm -rf ./dist && mkdir -p ./dist/app/prisma && cp -r ./build ./dist/app && cp ./package.json ./dist/app && cp ./package-lock.json ./dist/app && cp ./prisma/schema.prisma ./dist/app/prisma && cp ./docker/* ./dist",
    "dist:start": "npm ci --omit dev && npx -y prisma db push && node build",
    "preview": "vite preview",
    "test": "playwright test --ui",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@playwright/test": "^1.33.0",
    "@sveltejs/adapter-node": "^1.2.4",
    "@sveltejs/kit": "^1.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "postcss": "^8.4.23",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.8.1",
    "prisma": "^4.13.0",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "svelte-preprocess": "^5.0.2",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "typescript": "^5.0.4",
    "vite": "^4.3.4",
    "vitest": "^0.31.0"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-prisma": "^2.0.0",
    "@popperjs/core": "^2.11.6",
    "@prisma/client": "^4.13.0",
    "base64url": "^3.0.1",
    "classnames": "^2.3.2",
    "daisyui": "^2.51.6",
    "flowbite": "^1.6.5",
    "flowbite-svelte": "^0.34.10",
    "lucia-auth": "^1.5.0",
    "zod": "^3.21.4"
  }
}